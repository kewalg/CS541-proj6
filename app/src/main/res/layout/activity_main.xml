<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/choose_tv"
        android:layout_centerHorizontal="true"
        android:text="myWeatherApp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/choose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Make A Selection"
        android:textSize="25sp" />

    <Button
        android:id="@+id/current_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Current Status/Location" />

    <Button
        android:id="@+id/weather_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_btn"
        android:layout_centerHorizontal="true"
        android:text="Get Weather Status" />


</RelativeLayout>